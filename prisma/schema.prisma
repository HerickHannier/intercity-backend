generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PASSENGER
  DRIVER
  ADMIN
}

enum TripStatus {
  SCHEDULED
  COMPLETED
  CANCELED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum SupportStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String?
  cpf       String?
  city      String?
  photoUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Passenger {
  id     String @id @default(uuid())
  userId String @unique

  user  User            @relation(fields: [userId], references: [id])
  trips TripPassenger[]
}

model Driver {
  id            String  @id @default(uuid())
  userId        String  @unique
  licenseNumber String?
  verified      Boolean @default(false)

  user    User     @relation(fields: [userId], references: [id])
  vehicle Vehicle?
  trips   Trip[]
  ratings Rating[]
}

model Vehicle {
  id       String @id @default(uuid())
  driverId String @unique
  model    String
  plate    String @unique
  seats    Int

  driver Driver @relation(fields: [driverId], references: [id])
}

model Trip {
  id          String     @id @default(uuid())
  driverId    String
  origin      String
  destination String
  date        DateTime
  price       Float
  status      TripStatus @default(SCHEDULED)

  driver     Driver          @relation(fields: [driverId], references: [id])
  passengers TripPassenger[]
  payments   Payment[]
}

model TripPassenger {
  id          String @id @default(uuid())
  tripId      String
  passengerId String

  trip      Trip      @relation(fields: [tripId], references: [id])
  passenger Passenger @relation(fields: [passengerId], references: [id])

  @@unique([tripId, passengerId])
}

model Payment {
  id        String        @id @default(uuid())
  userId    String
  tripId    String
  amount    Float
  status    PaymentStatus
  createdAt DateTime      @default(now())

  user User @relation(fields: [userId], references: [id])
  trip Trip @relation(fields: [tripId], references: [id])
}

model Rating {
  id        String   @id @default(uuid())
  userId    String
  driverId  String
  score     Int
  comment   String?
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  driver Driver @relation(fields: [driverId], references: [id])
}

model SupportTicket {
  id        String        @id @default(uuid())
  userId    String
  subject   String
  message   String
  status    SupportStatus @default(OPEN)
  createdAt DateTime      @default(now())

  user User @relation(fields: [userId], references: [id])
}
